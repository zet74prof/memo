<div class="container">
    {{ form_start(form) }}
    <div class="row mb-3">
        <div class="col-lg-2">
            {{ form_label(form.statusName) }}
        </div>
        <div class="col-lg-10">
            {{ form_widget(form.statusName) }}
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-lg-2">
            {{ form_label(form.active) }}
        </div>
        <div class="col-lg-10">
            {{ form_widget(form.active) }}
        </div>
    </div>
    <button class="btn btn-success">{{ button_label|default('Sauvegarder') }}</button>
    {{ form_end(form) }}
</div>
