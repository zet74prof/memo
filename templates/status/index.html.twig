{% extends 'base.html.twig' %}

{% block title %}Status index{% endblock %}

{% block body %}
    <div class="row mb-3">
        <h1>Paramétrage des status</h1>
    </div>

    <div class="row m-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom du status</th>
                    <th>Actif</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for status in statuses %}
                <tr>
                    <td>{{ status.id }}</td>
                    <td>{{ status.statusName }}</td>
                    <td>{% if status.active == true %}Oui{% endif %}</td>
                    <td>
                        <a href="{{ path('status_edit', {'id': status.id}) }}" class="btn btn-primary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">aucune donnée trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row m-3">
            <a href="{{ path('status_new') }}"><button class="btn btn-primary">Créer nouveau status</button></a>
        </div>
    </div>
{% endblock %}
