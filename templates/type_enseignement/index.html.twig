{% extends 'base.html.twig' %}

{% block title %}TypeEnseignement index{% endblock %}

{% block body %}
    <div class="row mb-3">
        <h1>TypeEnseignement index</h1>
    </div>
    <div class="row mb-3">
        <a href="{{ path('type_enseignement_new') }}"><button class="btn btn-primary">Créer nouveau</button></a>
    </div>
    <div class="row m-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for type_enseignement in type_enseignements %}
                <tr>
                    <td>{{ type_enseignement.id }}</td>
                    <td>{{ type_enseignement.name }}</td>
                    <td>
                        <a href="{{ path('type_enseignement_show', {'id': type_enseignement.id}) }}" class="btn btn-primary">Afficher</a>
                        <a href="{{ path('type_enseignement_edit', {'id': type_enseignement.id}) }}" class="btn btn-primary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">aucune donnée trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
