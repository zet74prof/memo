{% extends 'base.html.twig' %}

{% block title %}Apprenant index{% endblock %}

{% block body %}
    <h1>Apprenant</h1>

    <div class="row m-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom d'utilisateur</th>
                    <th>Nom de famille</th>
                    <th>Prénom</th>
                    <th>Titre</th>
                    <th>Adresse</th>
                    <th>Code Postal</th>
                    <th>Ville</th>
                    <th>Date de naissance</th>
                    <th>Tel1</th>
                    <th>Tel2</th>
                    <th>Commentaire</th>
                    <th>Email</th>
                    <th>Enfant(s) à charge</th>
                    <th>Prescripteur</th>
                    <th>Ressources</th>
                    <th>Type de formation</th>
                    <th>QPV</th>
                    <th>Situation familiale</th>
                    <th>Site</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for apprenant in apprenants %}
                <tr>
                    <td>{{ apprenant.id }}</td>
                    <td>{{ apprenant.userIdentifier }}</td>
                    <td>{{ apprenant.surname }}</td>
                    <td>{{ apprenant.firstname }}</td>
                    <td>{{ apprenant.title }}</td>
                    <td>{{ apprenant.lastAddress.address }}</td>
                    <td>{{ apprenant.lastAddress.postalCode }}</td>
                    <td>{{ apprenant.lastAddress.city }}</td>
                    <td>{{ apprenant.birthDate ? apprenant.birthDate|date('d/m/Y') : '' }}</td>
                    <td>{{ apprenant.tel1 }}</td>
                    <td>{{ apprenant.tel2 }}</td>
                    <td>{{ apprenant.comment }}</td>
                    <td>{{ apprenant.email }}</td>
                    <td>{{ apprenant.enfantACharge }}</td>
                    <td>{{ apprenant.lastPrescripteur.prescripteurName }}</td>
                    <td>{{ apprenant.lastRessource.ressourceName }}</td>
                    <td>{{ apprenant.lastQPV.qpvName }}</td>
                    <td>{{ apprenant.situationFamiliale.name }}</td>
                    <td>{% for site in apprenant.getLastSites %}
                        {{ site.siteName }}<br>
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('apprenant_show', {'id': apprenant.id}) }}">Afficher</a>
                        <a href="{{ path('apprenant_edit', {'id': apprenant.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="17">aucune donnée trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="row mb-3">
            <div class="col-lg-2">
                <a href="{{ path('apprenant_new') }}"><button class="btn btn-primary">Créer un nouvel apprenant</button></a>
            </div>
        </div>
    </div>
{% endblock %}
