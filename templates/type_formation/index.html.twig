{% extends 'base.html.twig' %}

{% block title %}Types de formation{% endblock %}

{% block body %}
    <div class="row m-3">
        <h1>Paramétrage des Types de formation</h1>
    </div>
    <div class="row m-3">
        <a href="{{ path('type_formation_new') }}"><button class="btn btn-primary">Créer nouveau</button></a>
    </div>
    <div class="row m-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nom formation</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for type_formation in type_formations %}
                <tr>
                    <td>{{ type_formation.formationName }}</td>
                    <td>
                        <a href="{{ path('type_formation_edit', {'id': type_formation.id}) }}" class="btn btn-primary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">aucune donnée trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}