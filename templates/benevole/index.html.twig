{% extends 'base.html.twig' %}

{% block title %}Benevole{% endblock %}

{% block body %}
    <h1>Benevole</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Surname</th>
                <th>Firstname</th>
                <th>Title</th>
                <th>Address</th>
                <th>PostalCode</th>
                <th>City</th>
                <th>BirthDate</th>
                <th>Tel1</th>
                <th>Tel2</th>
                <th>Comment</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for benevole in benevoles %}
            <tr>
                <td>{{ benevole.id }}</td>
                <td>{{ benevole.username }}</td>
                <td>{{ benevole.roles ? benevole.roles|json_encode : '' }}</td>
                <td>{{ benevole.password }}</td>
                <td>{{ benevole.surname }}</td>
                <td>{{ benevole.firstname }}</td>
                <td>{{ benevole.title }}</td>
                <td>{{ benevole.address }}</td>
                <td>{{ benevole.postalCode }}</td>
                <td>{{ benevole.city }}</td>
                <td>{{ benevole.birthDate ? benevole.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ benevole.tel1 }}</td>
                <td>{{ benevole.tel2 }}</td>
                <td>{{ benevole.comment }}</td>
                <td>{{ benevole.email }}</td>
                <td>
                    <a href="{{ path('benevole_show', {'id': benevole.id}) }}">show</a>
                    <a href="{{ path('benevole_edit', {'id': benevole.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('benevole_new') }}">Create new</a>
{% endblock %}
