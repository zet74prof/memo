{% extends 'base.html.twig' %}

{% block title %}NiveauFormation index{% endblock %}

{% block body %}
    <div class="row mb-3">
        <h1>Paramétrage des niveaux de formations</h1>
    </div>

    <div class="row m-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>nom du Niveau de Formation</th>
                    <th>Actif</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for niveau_formation in niveau_formations %}
                <tr>
                    <td>{{ niveau_formation.id }}</td>
                    <td>{{ niveau_formation.nivFormName }}</td>
                    <td>{% if niveau_formation.active == true %}Oui{% endif %}</td>
                    <td>
                        <a href="{{ path('niveau_formation_edit', {'id': niveau_formation.id}) }}" class="btn btn-primary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">aucune donnée trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row m-3">
            <a href="{{ path('niveau_formation_new') }}"><button class="btn btn-primary">Créer un niveau de formation</button></a>
        </div>
    </div>
{% endblock %}

