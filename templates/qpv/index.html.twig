{% extends 'base.html.twig' %}

{% block title %}QPV{% endblock %}

{% block body %}
    <div class="row m-3">
        <h1>Paramétrage des QPV</h1>
    </div>
    <div class="row m-3">
        <a href="{{ path('q_p_v_new') }}"><button class="btn btn-primary">Créer un nouveau QPV</button></a>
    </div>
    <div class="row m-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nom du QPV</th>
                    <th>Actif</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for q_p_v in q_p_vs %}
                <tr>
                    <td>{{ q_p_v.qpvName }}</td>
                    <td>{% if q_p_v.active == true %}Oui{% endif %}</td>
                    <td>
                        <a href="{{ path('q_p_v_edit', {'id': q_p_v.id}) }}" class="btn btn-primary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">aucune donnée trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
