{% extends 'base.html.twig' %}

{% block title %}Ressource{% endblock %}

{% block body %}
    <h1>Ressource</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ressource.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ ressource.code }}</td>
            </tr>
            <tr>
                <th>Libellé</th>
                <td>{{ ressource.ressourceName }}</td>
