            <a href="{{ path('ressource_index') }}"><button class="btn btn-primary">Retour à la liste</button></a>
        </div>
        <div class="col-lg-1">
            <a href="{{ path('ressource_edit', {'id': ressource.id}) }}"><button class="btn btn-primary">Modifier</button></a>
        </div>
    </div>

    {{ include('ressource/_delete_form.html.twig') }}
