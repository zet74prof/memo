{% extends 'base.html.twig' %}

{% block title %}Ressources{% endblock %}

{% block body %}
    <div class="row m-3">
        <h1>Paramétrage des ressources</h1>
    </div>
    <div class="row m-3">
        <a href="{{ path('ressource_new') }}"><button class="btn btn-primary">Créer nouvelle ressource</button></a>
    </div>
    <div class="row m-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Libellé</th>
                    <th>Actif</th>
                </tr>
            </thead>
            <tbody>
            {% for ressource in ressources %}
                <tr>
                    <td>{{ ressource.code }}</td>
                    <td>{{ ressource.ressourceName }}</td>
                    <td>{% if ressource.active == true %}Oui{% endif %}</td>
                    <td>
                        <a href="{{ path('ressource_edit', {'id': ressource.id}) }}" class="btn btn-primary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">aucune donnée trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
