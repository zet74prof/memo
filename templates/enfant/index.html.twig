{% extends 'base.html.twig' %}

{% block title %}Enfant index{% endblock %}

{% block body %}
    <h1>Enfant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TypeReferent</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for enfant in enfants %}
            <tr>
                <td>{{ enfant.id }}</td>
                <td>{{ enfant.typeReferent }}</td>
                <td>
                    <a href="{{ path('enfant_show', {'id': enfant.id}) }}">Afficher</a>
                    <a href="{{ path('enfant_edit', {'id': enfant.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('enfant_new') }}">Créer un nouvel enfant</a>
{% endblock %}
