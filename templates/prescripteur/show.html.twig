{% extends 'base.html.twig' %}

{% block title %}Prescripteur{% endblock %}

{% block body %}
    <h1>Prescripteur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ prescripteur.prescripteurName }}</td>
            </tr>
            <tr>
                <th>Responsable</th>
                <td>{{ prescripteur.respName }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ prescripteur.address }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ prescripteur.postalCode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ prescripteur.city }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ prescripteur.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ prescripteur.tel }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ prescripteur.type.name }}</td>
            </tr>
            <tr>
                <th>Territoire</th>
                <td>{{ prescripteur.territoire.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row mb-3">
        <div class="col-lg-1">
            <a href="{{ path('prescripteur_index') }}"><button class="btn btn-primary">Retour à la liste</button></a>
        </div>
        <div class="col-lg-1">
            <a href="{{ path('prescripteur_edit', {'id': prescripteur.id}) }}"><button class="btn btn-primary">Modifier</button></a>
        </div>
    </div>

    {{ include('prescripteur/_delete_form.html.twig') }}
{% endblock %}
