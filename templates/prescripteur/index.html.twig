{% extends 'base.html.twig' %}

{% block title %}Prescripteur index{% endblock %}

{% block body %}
    <div class="row mb-3">
        <h1>Paramétrage des préscripteur</h1>
    </div>

    <div class="row m-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Code postal</th>
                    <th>Ville</th>
                    <th>Téléphone</th>
                    <th>Type</th>
                    <th>Actif</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for prescripteur in prescripteurs %}
                <tr>
                    <td>{{ prescripteur.id }}</td>
                    <td>{{ prescripteur.prescripteurName }}</td>
                    <td>{{ prescripteur.postalCode }}</td>
                    <td>{{ prescripteur.city }}</td>
                    <td>{{ prescripteur.tel }}</td>
                    <td>{{ prescripteur.type.name }}</td>
                    <td>{% if ressource.active == true %}Oui{% endif %}</td>
                    <td>
                        <a href="{{ path('prescripteur_show', {'id': prescripteur.id}) }}" class="btn btn-primary">Afficher</a>
                        <a href="{{ path('prescripteur_edit', {'id': prescripteur.id}) }}" class="btn btn-primary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">aucune donnée trouver</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row m-3">
            <a href="{{ path('prescripteur_new') }}"><button class="btn btn-primary">Créer un nouveau prescripteur</button></a>
        </div>
    </div>
{% endblock %}
