{% extends 'base.html.twig' %}

{% block title %}Types de prescripteur{% endblock %}

{% block body %}
    <div class="row m-3">
        <h1>Paramétrage des types de prescripteur</h1>
    </div>
    <div class="row m-3">
        <a href="{{ path('type_prescripteur_new') }}"><button class="btn btn-primary">Créer un nouveau type de prescripteur</button></a>
    </div>
    <div class="row m-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Type de prescripteur</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for type_prescripteur in type_prescripteurs %}
                <tr>
                    <td>{{ type_prescripteur.name }}</td>
                    <td>
                        <a href="{{ path('type_prescripteur_edit', {'id': type_prescripteur.id}) }}" class="btn btn-primary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">aucune donnée trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
