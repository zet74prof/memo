{% extends 'base.html.twig' %}

{% block title %}Sites{% endblock %}

{% block body %}
    <div class="row m-3">
        <h1>Paramétrage des sites</h1>
    </div>
    <div class="row m-3">
        <a href="{{ path('site_new') }}"><button class="btn btn-primary">Créer un nouveau site</button></a>
    </div>
    <div class="row m-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nom du site</th>
                    <th>Actif</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for site in sites %}
                <tr>
                    <td>{{ site.siteName }}</td>
                    <td>{% if site.active == true %}Oui{% endif %}</td>
                    <td>
                        <a href="{{ path('site_edit', {'id': site.id}) }}" class="btn btn-primary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                    <tr>
                        <td colspan="3">aucune donnée trouvée</td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
