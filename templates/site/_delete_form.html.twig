<form method="post" action="{{ path('site_delete', {'id': site.id}) }}" onsubmit="return confirm('êtes-vous sûr de vouloir supprimer cet élément?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ site.id) }}">
    <div class="col-lg-1">
        <button class="btn btn-warning btn-xs">Supprimer</button>
    </div>
</form>
