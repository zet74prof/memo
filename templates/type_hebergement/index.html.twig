{% extends 'base.html.twig' %}

{% block title %}Types hébergement{% endblock %}

{% block body %}
    <div class="row m-3">
        <h1>Paramétrage des types d'hébergement</h1>
    </div>
    <div class="row m-3">
        <a href="{{ path('type_hebergement_new') }}"><button class="btn btn-primary">Créer nouveau</button></a>
    </div>
    <div class="row m-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Type d'hébergement</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for type_hebergement in type_hebergements %}
                <tr>
                    <td>{{ type_hebergement.name }}</td>
                    <td>
                        <a href="{{ path('type_hebergement_edit', {'id': type_hebergement.id}) }}" class="btn btn-primary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">aucune donnée trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
